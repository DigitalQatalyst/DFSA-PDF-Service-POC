{
  "name": "dfsa-pdf-service-poc",
  "version": "1.0.0",
  "description": "DFSA PDF Generation Service POC - Authorised Individual Form",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "dev:api": "ts-node-dev --respawn --transpile-only src/api/server.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:api": "node dist/api/server.js",
    "test": "jest",
    "test:config": "ts-node src/tests/test-config.ts",
    "test:mapper": "ts-node src/tests/test-mapper.ts",
    "test:dataverse": "ts-node src/tests/test-dataverse.ts",
    "test:dataverse:curl": "ts-node test-dataverse-curl.ts",
    "test:pdf": "ts-node src/tests/test-pdf-generation.ts",
    "test:template": "ts-node src/tests/test-template.ts",
    "validate:all": "npm run test:config && npm run test:dataverse && npm run test:mapper && npm run test:template",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "dfsa",
    "pdf",
    "dataverse",
    "authorised-individual"
  ],
  "author": "DFSA Team",
  "license": "ISC",
  "dependencies": {
    "@azure/identity": "^4.0.0",
    "@azure/storage-blob": "^12.17.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "angular-expressions": "^1.5.1",
    "axios": "^1.6.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "docxtemplater": "^3.42.0",
    "dotenv": "^16.3.1",
    "express": "^4.22.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "pizzip": "^3.1.4",
    "puppeteer": "^24.15.0",
    "resend": "^4.8.0",
    "uuid": "^13.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
